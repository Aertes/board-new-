.app-main-wrap
  position relative
  .table-nav
    line-height 40px
    margin-bottom 20px
    h3
      float left
      font-weight normal
      font-size 25px
    .color-line
      display inline-block
      width 10px
      height 32px
      vertical-align -8px
      margin-right 15px
      &.color
        background-color #D9D9D9
      &.color1
        background-color #9DC3E6
      &.color2
        background-color #FFD966
      &.color3
        background-color #CC99FF
      &.color4
        background-color #A9D18E
      &.color5
        background-color #A9D18E
  .tool-box
    float right
    .icon-box
      float right
      .qrcode
        position relative
        display inline-block
        .qrcode-warp
          position absolute
          right -50px
          margin-top 10px
          box-shadow 1px 1px 50px rgba(0,0,0,.3)
          padding 10px
          border-radius 10px
          background #fff
          z-index 8888
          line-height 1
          span
            text-align center
            display inline-block
            line-height 1
            font-size 14px
            width 100%
            margin-top 5px
          &:before
            content ''
            width 0
            height 0
            border-left 15px solid transparent
            border-right 15px solid transparent
            border-bottom 20px solid #fff
            position absolute
            top -15px
            right 49px
    .selection-box
      float left
      .dropdown-wrap
        &:last-of-type
          margin-left 10px
        &:first-of-type
          margin-left 0
    .icon
      font-size 30px
      margin-left 15px
      cursor pointer
    .erweima-icon
      color #3A75BA
    .link-icon
      color #5B819F
    .chart-icon
      color #EF5927
  .table-name
    font-size 25px
    margin-bottom 20px
    color #7F7F7F
    &.color
      color #4472CC
  .table-box
    margin-bottom 20px


/*chartStyle*/
.chart-wrap
  position fixed
  left 60px
  right 60px
  bottom 0
  top 76px
  background-color #F2F2F2
  transition transform .5s linear
  transform translateY(100%)
  z-index 1
  &.active
    transform translateY(0)
  .chart-icon-box
    float right
    line-height 40px
    height 40px
    cursor pointer
  .arrow-icon
    color #D2D1D1!important
    vertical-align -5px
  .back-botton
    color #9DC3EA
    font-size 30px
  .chart-cont-wrap
    position absolute
    left 25px
    right 25px
    top 60px
    bottom 20px
    &.T
      top 105px
    &.RR
      top 100px
    .chart-list-wrap
      height 100%
    .chart-cont
      height 100%
      /*border 1px solid #DFE4ED
      background-color #fff*/
    .chart-cont-list
      position relative
      width 32%
      height 50%
      float left
      &:nth-of-type(2),&:nth-of-type(5)
        margin 0 2%
      .chart-cont-list-cont
        height 90%
        /*background-color #fff
        border 1px solid #DFE4ED*/
      .chart-cont-list-cont-t
        display table
        height 10%
        width 100%
        font-size 20px
        table-layout fixed
        color #009DE1
        span
          display table-cell
          height 100%
          width 100%
          text-align center
          vertical-align middle
  /*&:nth-of-type(1),&:nth-of-type(2),&:nth-of-type(3)
    .chart-cont-list-cont-t
      margin-bottom 10px*/

@media screen and (max-device-width: 1235px) and (-webkit-min-device-pixel-ratio: 2) , (min-device-pixel-ratio: 2) , (-webkit-min-device-pixel-ratio: 2.75) , (min-device-pixel-ratio: 2.75) , (-webkit-min-device-pixel-ratio: 3) , (min-device-pixel-ratio: 3)
  .app-main-wrap
    .table-nav
      h3
        float none
    .tool-box
      float none
      margin-top 20px
      .selection-box
      .icon
        font-size 50px
        vertical-align -32px
      .erweima-icon
      .link-icon
        display none
  .chart-wrap
    left 10px
    right 10px
    top 156px
    .arrow-icon
      font-size 30px!important
      vertical-align -7px!important
    .chart-cont-wrap
      left 0
      right 0
      top 140px
      overflow-y auto
      &.mobile
        top 182px
      &.RR
        top 140px
      .chart-cont-list
        width 80%
        float none
        /*margin-bottom 10px*/
        &:nth-of-type(2),&:nth-of-type(5)
          margin 0 auto
  @media screen and (orientation: portrait),(-webkit-orientation: portrait)
    .chart-cont
      height 50%!important
  @media screen and (orientation: landscape),(-webkit-orientation: landscape)
    .chart-cont
      height 100%!important
